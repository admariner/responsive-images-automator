<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <style>
      output {
        margin: 1rem 0;
        padding: 1rem;
        display: block;
        font-family: monospace;
        background-color: gainsboro;
        border: 1px solid grey
      }
    </style>
  </head>

  <body>
    <h1><%= pageTitle %></h1>
    <h2>Rendered image</h2>
    <% if (image.mediaQueries.length === 0) { %>
    <img
      alt="<%= imgAlt %>"
      src="<%= image.legacyImgUrl %>"
      srcset="<%= image.mobileImgUrl %> 2x"
    />
    <% } else { %>
    <picture>
      <% image.mediaQueries.forEach((mqObject) => { %>
      <source
        media="(min-width: <%= mqObject.minWidth %>px)"
        srcset="<%= mqObject.imgUrlAt1x %> 1x,
                <%= mqObject.imgUrlAt2x %> 2x"
      />
      <% }) %>
      <img
        alt="<%= imgAlt %>"
        src="<%= image.legacyImgUrl %>"
        srcset="<%= image.mobileImgUrl %> 2x"
      />
    </picture>
    <% } %>

    <h2>HTML code</h2>
    <code><output></output></code>
    <script>
      const picture = document.querySelector('picture');
      const img = document.querySelector('img');
      const output = document.querySelector('output');
      output.innerText = (picture) ? picture.outerHTML : img.outerHTML;
    </script>
  </body>
</html>
